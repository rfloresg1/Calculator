<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Resultado"
        android:layout_width="550dp"
        android:layout_height="60dp"
        android:gravity="right|center_vertical"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/Calculadora"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/Calculadora"
        android:layout_width="550dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right">

            <Button
                android:id="@+id/button19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#000000"
                android:onClick="buttonClear"
                android:text="Clear"
                android:textColor="#FF5722"
                android:textColorHighlight="#000000"
                android:textColorLink="#000000"
                android:textSize="17sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button16"
                android:layout_width="133dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#000000"
                android:onClick="buttonSeven"
                android:text="7"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button20"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#000000"
                android:onClick="buttonEight"
                android:text="8"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button21"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#000000"
                android:onClick="buttonNine"
                android:text="9"
                android:textSize="25sp" />

            <Button
                android:id="@+id/dividir"
                android:layout_width="135dp"
                android:layout_height="match_parent"
                android:backgroundTint="#000000"
                android:onClick="buttonSplit"
                android:text="รท"
                android:textColor="#FF5722"
                android:textSize="25sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#000000"
                android:onClick="buttonFour"
                android:text="4"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button23"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#000000"
                android:onClick="buttonFive"
                android:text="5"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button24"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#000000"
                android:onClick="buttonSix"
                android:text="6"
                android:textSize="25sp" />

            <Button
                android:id="@+id/multiplicacion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#000000"
                android:onClick="buttonMultiply"
                android:text="x"
                android:textColor="#FF5722"
                android:textSize="17sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#000000"
                android:onClick="buttonOne"
                android:text="1"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button26"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#000000"
                android:onClick="buttonTwo"
                android:text="2"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button27"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#000000"
                android:onClick="buttonThree"
                android:text="3"
                android:textSize="25sp" />

            <Button
                android:id="@+id/restar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#000000"
                android:onClick="buttonSubtract"
                android:text="-"
                android:textColor="#FF5722"
                android:textColorHighlight="#FF5722"
                android:textSize="25sp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#000000"
                android:onClick="buttonDot"
                android:text="."
                android:textColor="#FF5722"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#000000"
                android:onClick="buttonZero"
                android:text="0"
                android:textColor="#FF5722"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:backgroundTint="@color/black"
                android:onClick="buttonEquals"
                android:text="="
                android:textColor="#FF5722"
                android:textSize="25sp" />

            <Button
                android:id="@+id/sumar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#000000"
                android:onClick="buttonSum"
                android:text="+"
                android:textColor="#FF5722"
                android:textSize="25sp" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/Checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Calculadora">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/MostrarOpciones"
                android:layout_width="279dp"
                android:layout_height="wrap_content"
                android:text="Mostrar opciones deshabilitar"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </TableRow>

    </TableLayout>

    <RadioGroup
        android:id="@+id/operaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Calculadora"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/suma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="#FFFFFF"
            android:text="Suma"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/resta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="#FFFFFF"
            android:text="Resta"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/multiplicar"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Multiplicaciรณn"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/division"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Divisiรณn"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>